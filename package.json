{
  "name": "project-ngx-cable-x",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod",
    "test": "ng test --code-coverage=true --watch=false --project 'ngx-cable-x'",
    "test-headless": "ng test --code-coverage=true --watch=false --no-progress --project 'ngx-cable-x' --browsers=ChromeHeadless && cat ./coverage/ngx-cable-x/lcov.info | coveralls",
    "lint": "ng lint --project 'ngx-cable-x'",
    "copyfiles": "cp -r CHANGELOG.md dist/ngx-cable-x/CHANGELOG.md && cp -r dist/ngx-cable-x/package.json projects/ngx-cable-x/package.json",
    "semantic-release": "semantic-release"
  },
  "author": "Nitesh Purohit",
  "keywords": [
    "websocket",
    "action cable",
    "cablex",
    "rails action cable angular"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Code-Vedas/ngx-cable-x.git"
  },
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@angular/animations": "~10.0.5",
    "@angular/common": "~10.0.5",
    "@angular/compiler": "~10.0.5",
    "@angular/core": "~10.0.5",
    "@angular/forms": "~10.0.5",
    "@angular/platform-browser": "~10.0.5",
    "@angular/platform-browser-dynamic": "~10.0.5",
    "@angular/router": "~10.0.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@commitlint/config-conventional": "^9.1.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.1.1",
    "actioncable": "~5.2.4-3",
    "cable-x-js": "latest",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "rxjs": "~6.5.4",
    "semantic-release": "^17.1.1",
    "tslib": "^2.0.1",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1001.1",
    "@angular-devkit/build-ng-packagr": "~0.1001.1",
    "@angular/cli": "~10.1.0",
    "@angular/compiler-cli": "~10.0.5",
    "@angular/language-service": "~10.1.1",
    "@types/jasmine": "~3.5.14",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^14.11.1",
    "codelyzer": "^6.0.0",
    "coveralls": "^3.1.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.2.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.1",
    "karma-jasmine-html-reporter": "^1.5.4",
    "mock-socket": "^9.0.3",
    "ng-packagr": "^10.1.0",
    "protractor": "~7.0.0",
    "ts-node": "~9.0.0",
    "tslint": "~6.1.3",
    "typescript": "~3.9.7"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "ng lint --project 'ngx-cable-x'"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "analyzeCommits": [
      "@semantic-release/commit-analyzer"
    ],
    "generateNotes": {
      "path": "@semantic-release/release-notes-generator",
      "preset": "angular",
      "parserOpts": {
        "noteKeywords": [
          "BREAKING CHANGE",
          "BREAKING CHANGES",
          "BREAKING"
        ]
      },
      "writerOpts": {
        "commitsSort": [
          "scope",
          "subject"
        ]
      }
    },
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      {
        "path": "@semantic-release/npm",
        "pkgRoot": "dist/ngx-cable-x",
        "npmPublish": false
      },
      {
        "path": "@semantic-release/exec",
        "cmd": "npm run copyfiles"
      },
      {
        "path": "@semantic-release/exec",
        "cmd": "echo '//registry.npmjs.org/:_authToken='$NPM_TOKEN>.npmrc"
      },
      {
        "path": "@semantic-release/exec",
        "cmd": "npm publish dist/ngx-cable-x"
      },
      {
        "path": "@semantic-release/git",
        "assets": [
          "CHANGELOG.md",
          "projects/ngx-cable-x/package.json"
        ],
        "message": "build(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      "@semantic-release/github"
    ]
  }
}
