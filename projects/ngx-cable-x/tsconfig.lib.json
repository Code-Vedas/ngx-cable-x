{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/ngx-cable-x",
    "target": "es2015",
    "declaration": true,
    "inlineSources": true,
    "types": ["node"],
    "lib": ["dom", "es2018"]
